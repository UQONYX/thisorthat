extends layout
block content
  header
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript")
  body
    form
        .form-group
            label(for="title")
              h4 Post Title 
            input.form-control.form-control-lg#title(type="text")
        .form-group
            label(for="sectionAText") 
                h5 Section A Text
            textarea.form-control#sectionAText(rows=6)
        .form-group
            label(for="sectionBText") 
                h5 Section B Text
            textarea.form-control#sectionBText(rows=6)
        .form-group
            br
            button.btn.btn-primary#send(type="submit") Submit
    script(type="text/javascript" src="/javascripts/make.js")